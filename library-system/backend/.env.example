# -----------------------------
# Server configuration
# -----------------------------

PORT=5001   # The port your server will run on

# -----------------------------
# Database connection
# -----------------------------

CONNECTION_STRING=mongodb://localhost:27017/library-management-system-backend 
# Replace with your MongoDB connection string (local or cloud)

# -----------------------------
# JWT (Authentication)
# -----------------------------
ACCESS_TOKEN_SECRET=your_jwt_secret_key_here   # Secret key for signing JWT tokens
ADMIN_SECRET_CODE=your_admin_secret_code_here  # Secret code required to promote to admin
JWT_EXPIRES_IN=60m  # Expiration time for JWT tokens (example: 60m = 1 hour)

# -----------------------------
# Email (used for notifications)
# -----------------------------

EMAIL_USER=your_email_here        # Example: example@gmail.com
EMAIL_PASS=your_app_password_here # App password, not your real email password
SUPER_ADMIN_EMAIL=superadmin_email_here  # Email for the main super admin account

# -----------------------------
# Cloudinary (for image upload)
# -----------------------------

CLOUDINARY_NAME=your_cloudinary_cloud_name_here
CLOUDINARY_API_KEY=your_cloudinary_api_key_here
CLOUDINARY_API_SECRET=your_cloudinary_api_secret_here
